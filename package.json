{
  "name": "typescript-with-node",
  "version": "1.0.0",
  "description": "- First install everything in every package run the command `npm install/ npm i` from your terminal in the root directory. - Then, you can run the platform for development purposes by running `npm run start` in the same directory. - For everything to work correctly you will need to set the keys in '.env' file.",
  "main": "index.js",
  "dependencies": {
    "body-parser": "^1.20.0",
    "express": "^4.18.1",
    "npm-watch": "^0.11.0",
    "typescript": "^4.6.4"
  },
  "scripts": {
    "build": "tsc --jsx react --project . ",
    "dev": "npm run build && node ./.dist/filter.js",
    "start": "npm-watch dev",
    "start-production": "node ./.dist/filter.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "watch": {
    "dev": {
      "patterns": [
        "."
      ],
      "quiet": false,
      "legacyWatch": true,
      "extensions": "ts, js, tsx"
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "nodemon": "^2.0.16"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"

}
